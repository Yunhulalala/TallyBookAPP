<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:padding="10dp">
    <RelativeLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:gravity="center_horizontal"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="180dp"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/lv_top_cost_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本月支出"
                android:gravity="center"
                android:drawableLeft="@mipmap/p_cost"/>
            <TextView
                android:id="@+id/lv_top_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:text="￥2000.78"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="180dp"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/lv_top_income_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/p_income"
                android:gravity="center"
                android:text="本月收入"/>
            <TextView
                android:id="@+id/lv_top_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:text="￥5800.630"
                android:textSize="20sp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数据分析"
            android:drawableLeft="@mipmap/p_analyse"
            android:drawablePadding="10sp"
            android:gravity="center"
            android:layout_marginLeft="100sp"
            android:layout_alignParentBottom="true"
            android:textColor="#719966"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今日支出 0￥   今日收入 0￥"
        android:layout_marginTop="150dp"
        android:textSize="15dp"
        />
</RelativeLayout>