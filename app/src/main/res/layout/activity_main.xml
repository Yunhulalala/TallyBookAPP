<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tally.tallybookapp2.MainActivity">

    <RelativeLayout
        android:id="@+id/main_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记账APP"
            android:textSize="20sp"
            android:textColor="#000000"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/p_search"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <ListView
        android:id="@+id/mian_listView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/main_top_layout"
        android:padding="10dp"
        android:divider="@null"
        android:dividerHeight="8dp"
        android:scrollbars="none">

    </ListView>

    <ImageButton
        android:id="@+id/main_more_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/p_more"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/main_btn_more_bg"/>
    <Button
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:src="@mipmap/p_more"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/main_more_btn"
        android:background="@drawable/main_note_btn_bg"
        android:layout_marginRight="10dp"
        android:text="记一笔"
        android:textSize="20sp"
        android:textStyle="italic"
        android:drawableLeft="@mipmap/p_note"/>
</RelativeLayout>
