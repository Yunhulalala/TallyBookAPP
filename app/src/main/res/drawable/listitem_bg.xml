<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--只有上边框的shape-->
    <item>
        <shape>
            <!--    边框颜色    -->
            <solid android:color="#E4E7E5"/>
        </shape>
    </item>

    <!--    想保留哪一边就设置哪一边边框   -->
    <item android:bottom="2dp">
        <shape>
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>
</layer-list>
